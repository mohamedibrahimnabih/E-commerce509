<div class="row mb-2">
    <h1><a href="/Category/Index"><i class="bi bi-arrow-left"></i></a> Edit Category @Model.Name</h1>
</div>
         
<div class="row">
    <form action="/Category/Edit" method="post">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <input type="text" class="form-control" id="categoryName" name="Name" placeholder="Category Name" value="@Model.Name">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>