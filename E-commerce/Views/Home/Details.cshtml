
<div class="card mb-3 col-12">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/images/@Model.Img" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <p class="card-text">Price: <span class="badge text-bg-warning">@Model.Price</span></p>
                <h5>Desciption:</h5>
                <ul>
                    <li>item 1</li>
                    <li>item 2</li>
                    <li>item 3</li>
                    <li>item 4</li>
                </ul>
                <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                <div class="row mb-2">
                    <div class="col-4">
                        <form asp-action="AddToCart" asp-controller="Cart" class="d-flex">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <input type="number" name="count" class="form-control mx-2" placeholder="Count">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>